<h2>Fill in the form below to add a car!</h2>

<%= form_for @car do |f| %>

<div>
  <%= f.label :make, "Make" %>
  <%= f.text_field :make %>
</div>

<div>
  <%= f.label :color, "Color" %>
  <%= f.text_field :color %>
</div>

<div>
  <%= f.label :year, "Year" %>
  <%= f.text_field :year %>
</div>

<div>
  <%= f.label :mileage, "Mileage" %>
  <%= f.text_field :mileage %>
</div>

<div>
  <%= f.label :description, "Description" %>
  <%= f.text_field :description %>
</div>

<p>
  <%= f.submit "Submit" %>
</p>

<% end %>
