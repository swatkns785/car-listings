<% if @manufacturer.errors.any? %>
  <% @manufacturer.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<h2>Fill in the form below to add a manufacturer!</h2>

<%= form_for @manufacturer do |f| %>

<div>
  <%= f.label :name, "Manufacturer Name" %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :country, "Country of Origin" %>
  <%= f.text_field :country %>
</div>

<p>
  <%= f.submit "Submit" %>
</p>

<% end %>
